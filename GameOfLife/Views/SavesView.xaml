<UserControl x:Class="GameOfLife.Views.SavesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GameOfLife.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition />
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="10"/>
            <RowDefinition />
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="1" Grid.Column="1" Text="Game saves" Style="{StaticResource HeaderTextBlockStyle}"></TextBlock>

        <TextBox Grid.Column="1" Grid.Row="3" Text="{Binding GameTitle, UpdateSourceTrigger=PropertyChanged}" ToolTip="Enter game title here" x:Name="TextBox"></TextBox>

        <StackPanel Grid.Column="3" Grid.Row="3" Grid.RowSpan="3" Orientation="Vertical">
            <Button Content="Save" Margin="0 0 0 10" Width="100" Command="{Binding SaveCommand}" x:Name="ButtonSave"></Button>
            <Button Content="Load" Margin="0 0 0 10" Width="100" Command="{Binding LoadCommand}"></Button>
            <Button Content="Load random" Margin="0 0 0 10" Width="100" Command="{Binding LoadRandomCommand}"></Button>
            <Button Content="Remove" Width="100" Command="{Binding RemoveCommand}"></Button>
        </StackPanel>

        <DataGrid Grid.Column="1" Grid.Row="5" AutoGenerateColumns="False" ItemsSource="{Binding Saves}" SelectedItem="{Binding SelectedSave}" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Title}" Header="Title" Width="*"/>
                <DataGridTextColumn Binding="{Binding DateTime}" Header="Date Time" Width="*"/>
                <DataGridTextColumn Binding="{Binding GenerationNumber}" Header="Generations" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
